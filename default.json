{
    "extends": [
        "config:recommended",
        ":semanticCommitTypeAll(chore)",
        ":disablePeerDependencies",
        ":includeNodeModules"
    ],
    "packageRules": [
        {
            "description": "Delay updates to typescript to 30 days since it tends to break something",
            "matchPackageNames": [
                "typescript"
            ],
            "minimumReleaseAge": "30 days"
        },
        {
            "groupName": "dependencies (non-major)",
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "extends": [
                "schedule:monthly"
            ]
        },
        {
            "groupName": "dependencies (common)",
            "matchSourceUrls": [
                "https://github.com/ocauve/*",
                "https://github.com/prosekit/*",
                "https://github.com/ProseMirror/*",
                "https://github.com/unocss/*"
            ]
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "minimumReleaseAge": "14 days",
            "extends": [
                "schedule:monthly"
            ]
        }
    ],
    "postUpdateOptions": [
        "pnpmDedupe"
    ],
    "branchNameStrict": true,
    "prConcurrentLimit": 2,
    "rangeStrategy": "bump"
}
