{
    "extends": [
        "config:recommended",
        ":semanticCommitTypeAll(chore)",
        ":disablePeerDependencies",
        ":includeNodeModules"
    ],
    "packageRules": [
        {
            "groupName": "Remirror packages",
            "matchPackagePatterns": [
                "jest-prosemirror",
                "remirror"
            ],
            "extends": [
                "schedule:daily"
            ],
            "prPriority": 40
        },
        {
            "groupName": "ProseMirror packages",
            "matchPackagePatterns": [
                "prosemirror"
            ],
            "excludePackagePatterns": [
                "jest-prosemirror"
            ],
            "extends": [
                "schedule:daily"
            ],
            "prPriority": 30
        },
        {
            "groupName": "dependencies (non-major)",
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "extends": [
                "schedule:monthly"
            ],
            "prPriority": 20
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "stabilityDays": 14,
            "extends": [
                "schedule:monthly"
            ],
            "prPriority": 10
        }
    ],
    "postUpdateOptions": [
        "pnpmDedupe"
    ],
    "branchNameStrict": true,
    "prConcurrentLimit": 2,
    "rangeStrategy": "bump",
    "dependencyDashboard": false
}
