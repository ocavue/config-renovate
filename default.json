{
    "extends": [
        "config:base",
        ":semanticCommitTypeAll(chore)"
    ],
    "packageRules": [
        {
            "groupName": "Remirror packages",
            "matchSourceUrlPrefixes": [
                "https://github.com/remirror/"
            ],
            "prPriority": 40
        },
        {
            "groupName": "ProseMirror packages",
            "matchSourceUrlPrefixes": [
                "https://github.com/ProseMirror/"
            ],
            "prPriority": 30
        },
        {
            "groupName": "dependencies (non-major)",
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "prPriority": 20,
            "extends": [
                "schedule:weekly"
            ]
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "stabilityDays": 14,
            "prPriority": 10,
            "extends": [
                "schedule:monthly"
            ]
        }
    ],
    "postUpdateOptions": [
        "pnpmDedupe"
    ],
    "branchNameStrict": true,
    "prConcurrentLimit": 2,
    "rangeStrategy": "bump",
    "dependencyDashboard": false
}
