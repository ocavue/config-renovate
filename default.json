{
    "extends": [
        "config:recommended",
        ":semanticCommitTypeAll(chore)",
        ":disablePeerDependencies",
        ":includeNodeModules"
    ],
    "packageRules": [
        {
            "description": "Delay some packages since they tend to break something",
            "matchPackageNames": [
                "typescript",
                "eslint",
                "unocss",
                "@unocss/*"
            ],
            "minimumReleaseAge": "30 days"
        },
        {
            "description": "Delay @types/node",
            "matchPackageNames": [
                "@types/node"
            ],
            "minimumReleaseAge": "18 months"
        },
        {
            "groupName": "dependencies (non-major)",
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "extends": [
                "schedule:monthly"
            ]
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "minimumReleaseAge": "17 days",
            "extends": [
                "schedule:monthly"
            ]
        }
    ],
    "postUpdateOptions": [
        "pnpmDedupe"
    ],
    "branchNameStrict": true,
    "prConcurrentLimit": 2,
    "rangeStrategy": "bump"
}
