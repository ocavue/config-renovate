{
    "extends": [
        "config:recommended",
        ":semanticCommitTypeAll(chore)",
        ":disablePeerDependencies",
        ":includeNodeModules",
        "github>kachick/renovate-config-dprint#1.3.0"
    ],
    "packageRules": [
        {
            "description": "Ignore Node.js",
            "matchPackageNames": [
                "@types/node",
                "node"
            ],
            "enabled": false
        },
        {
            "description": "Delay some packages since they tend to break something",
            "matchPackageNames": [
                "typescript",
                "eslint",
                "@eslint/*",
                "unocss",
                "@unocss/*"
            ],
            "minimumReleaseAge": "30 days"
        },
        {
            "groupName": "dependencies (non-major)",
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "extends": [
                "schedule:monthly"
            ]
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "minimumReleaseAge": "30 days",
            "extends": [
                "schedule:monthly"
            ]
        }
    ],
    "postUpdateOptions": [
        "pnpmDedupe"
    ],
    "branchNameStrict": true,
    "prConcurrentLimit": 2,
    "rangeStrategy": "bump"
}
